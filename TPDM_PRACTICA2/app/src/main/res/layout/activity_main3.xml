<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:text="Recuperar datos"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_gravity="center">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Archivo 1"
                android:id="@+id/archivo1"
                android:textSize="17dp"
                android:checked="true"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Archivo 2"
                android:textSize="17dp"
                android:id="@+id/archivo2"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Archivo 3"
                android:textSize="17dp"
                android:id="@+id/archivo3"/>
        </RadioGroup>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:id="@+id/abrir"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="GridLayout con valor del Vector/Matriz:"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textAlignment="center"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridMV"
        android:layout_margin="20dp">
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_gravity="center"
        android:id="@+id/exportar"
        android:layout_marginTop="20dp"
        android:text="Exportar a XLS"
        />
</LinearLayout>