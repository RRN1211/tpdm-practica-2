<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:text="Captura datos"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="52dp"
                android:layout_marginBottom="10dp"
                android:text="Valor:"
                android:textColor="#000000"
                android:textSize="17dp"
                />

            <EditText
                android:id="@+id/valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="                                                   "
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Posicion C:"
                android:textColor="#000000"
                android:textSize="17dp"
                />

            <EditText
                android:id="@+id/posicionC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="                                                   "
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/layouPR"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Posicion R:"
                android:textColor="#000000"
                android:textSize="17dp"
                />

            <EditText
                android:id="@+id/posicionR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="                                                   "
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capturar"
                android:textColor="#000000"
                android:textSize="17dp"
                android:id="@+id/capturar"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:textColor="#000000"
                android:textSize="17dp"
                android:id="@+id/regresar"
                android:layout_marginLeft="118dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_a2"
                android:layout_marginLeft="15dp">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Archivo 1"
                    android:id="@+id/archivo1"
                    android:textSize="17dp"
                    android:checked="true"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Archivo 2"
                    android:textSize="17dp"
                    android:id="@+id/archivo2"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Archivo 3"
                    android:textSize="17dp"
                    android:id="@+id/archivo3"/>
            </RadioGroup>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivar"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:id="@+id/archivar"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="GridLayout con valor del Vector/Matriz:"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textAlignment="center"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridMV"
        android:layout_margin="20dp">
    </GridLayout>
</LinearLayout>